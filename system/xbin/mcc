bin_dir=$mcc_dir/bin
sr_path=$mcc_dir/.running
cfg_path=$mcc_dir/mcc.conf
help_path=$mcc_dir/docs/README.md

abort() {
  echo ' '
  print --error "$1"
  exit
}

print() {
  case "$1" in
    --done)  echo '- Done'      ;;
    --error) echo "ERROR: $2"   ;;
    --warn)  echo "WARNING: $2" ;;
    --info)  echo "INFO: $2"    ;;
    *)       echo "- $1"        ;;
  esac
}

